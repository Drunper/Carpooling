<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.myrides.ParticipantRideFragment">

    <data>
        <variable
            name="activeRide"
            type="com.example.carpooling.data.model.ActiveRide" />
        <variable
            name="fragment"
            type="com.example.carpooling.ui.myrides.ParticipantRideFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fieldActiveRideDate"
            android:layout_width="100dp"
            android:layout_height="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="68dp"
            android:text="@{activeRide.date}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fieldActiveRideTo" />

        <TextView
            android:id="@+id/fieldActiveRideTime"
            android:layout_width="100dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="68dp"
            android:text="@{activeRide.time}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fieldActiveRideDate" />

        <TextView
            android:id="@+id/labelActiveRideDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:text="@string/btnDate"
            app:layout_constraintEnd_toStartOf="@+id/fieldActiveRideDate"
            app:layout_constraintTop_toBottomOf="@+id/labelActiveRideTo" />

        <TextView
            android:id="@+id/labelActiveRideTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="84dp"
            android:text="@string/btnTime"
            app:layout_constraintEnd_toStartOf="@+id/fieldActiveRideTime"
            app:layout_constraintTop_toBottomOf="@+id/labelActiveRideDate" />

        <TextView
            android:id="@+id/textViewActiveRideTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginTop="56dp"
            android:text="@string/activeRideTitle"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/labelActiveRideFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:text="@string/from"
            app:layout_constraintEnd_toStartOf="@+id/fieldActiveRideFrom"
            app:layout_constraintTop_toBottomOf="@+id/textViewActiveRideTitle" />

        <TextView
            android:id="@+id/labelActiveRideTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="36dp"
            android:text="@string/to"
            app:layout_constraintEnd_toStartOf="@+id/fieldActiveRideTo"
            app:layout_constraintTop_toBottomOf="@+id/labelActiveRideFrom" />

        <TextView
            android:id="@+id/fieldActiveRideFrom"
            android:layout_width="100dp"
            android:layout_height="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="68dp"
            android:text="@{fragment.getAddress(activeRide.from_lat, activeRide.from_lng)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewActiveRideTitle" />

        <TextView
            android:id="@+id/fieldActiveRideTo"
            android:layout_width="100dp"
            android:layout_height="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="68dp"
            android:text="@{fragment.getAddress(activeRide.to_lat, activeRide.to_lng)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fieldActiveRideFrom" />

        <CheckBox
            android:id="@+id/checkActiveRideSmoking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="148dp"
            android:checked="@{activeRide.smokingAllowed}"
            android:enabled="false"
            android:text="@string/smoking"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fieldActiveRideTime" />

        <CheckBox
            android:id="@+id/checkActiveRideSilent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="156dp"
            android:checked="@{activeRide.silentRide}"
            android:enabled="false"
            android:text="@string/silent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkActiveRideLuggage" />

        <CheckBox
            android:id="@+id/checkActiveRideLuggage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="156dp"
            android:checked="@{activeRide.luggageAllowed}"
            android:enabled="false"
            android:text="@string/luggage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkActiveRideSmoking" />

        <Button
            android:id="@+id/btnCancelBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="108dp"
            android:text="@string/btnCancelBooking"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fieldActiveRideNotes" />

        <TextView
            android:id="@+id/fieldActiveRideNotes"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="80dp"
            android:text="@{activeRide.addNotes}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkActiveRideSilent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>