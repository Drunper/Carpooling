<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.publish.PublishDatetimeFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.carpooling.viewmodels.PublishViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnPublishDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="40dp"
            android:text="@string/btnDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titlePublishDatetime" />

        <TextView
            android:id="@+id/titlePublishDatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="88dp"
            android:text="@string/titlePublishDatetime"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnPublishTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="29dp"
            android:text="@string/btnTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPublishDate" />

        <TextView
            android:id="@+id/fieldPublishDate"
            android:layout_width="172dp"
            android:layout_height="39dp"
            android:layout_marginStart="51dp"
            android:layout_marginTop="40dp"
            android:text="@{viewModel.date}"
            app:layout_constraintStart_toEndOf="@+id/btnPublishDate"
            app:layout_constraintTop_toBottomOf="@+id/titlePublishDatetime" />

        <TextView
            android:id="@+id/fieldPublishTime"
            android:layout_width="172dp"
            android:layout_height="39dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="38dp"
            android:text="@{viewModel.time}"
            app:layout_constraintStart_toEndOf="@+id/btnPublishTime"
            app:layout_constraintTop_toBottomOf="@+id/fieldPublishDate" />

        <Button
            android:id="@+id/btnPublishDatetimeNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="73dp"
            android:layout_marginEnd="170dp"
            android:text="@string/btnNext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fieldPublishTime" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>